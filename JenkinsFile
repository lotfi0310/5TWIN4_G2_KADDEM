pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean compile'
            }
        }
         stage('SonarQube Analysis') {
                        steps {
                            sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sarra'
                        }
                    }



                    stage('NEXUS') {
                                steps {
                                    sh 'mvn deploy'
                                }
                            }

                    stage('Test Unit') {
                                steps {
                                    sh 'mvn test'
                                }
                            }
    }
                 stage('Test deploy') {
                                    steps {
                                        sh 'mvn deploy'
                                    }
                                }
        }


    post {
        success {
            echo 'Build successful'
        }
        failure {
            echo 'fail'
        }
    }
}