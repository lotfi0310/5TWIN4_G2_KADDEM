pipeline {
    agent any
     environment {

            DOCKER_IMAGE_NAME = 'sarraharguem/kaddemproject'
            DOCKER_IMAGE_TAG = 'v8'
        }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean compile'
            }
        }
         stage('SonarQube Analysis') {
                        steps {
                            sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sarra'
                        }
                    }

                    stage('Test Unit') {
                          steps {
                                sh 'mvn test'
                                }
                                   }
               stage('NEXUS') {
                      steps {
                          sh 'mvn deploy -DskipTests'
                      }
                     }

stage('BUILD DOCKER IMAGE') {
    steps {

             sh 'docker build -t $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG -f Dockerfile ./'

    }
}



                    stage('Login & Push Image To HUB') {
                       steps {

 sh "docker login -u sarraharguem -p Sarra123*"
 sh "docker tag $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG sarraharguem/kaddemproject:$DOCKER_IMAGE_TAG"
 sh "docker push  sarraharguem/kaddemproject:$DOCKER_IMAGE_TAG"
           }
                   }
   stage('docker-compose') {
     steps {
        sh 'docker compose up -d'
           echo 'docker-compose'
            }
        }


        }


    post {
        success {
            echo 'Build successful'
        }
        failure {
            echo 'fail'
        }
    }
}