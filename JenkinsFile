pipeline {
    agent any
     environment {

            DOCKER_IMAGE_NAME = 'sarraharguem/kaddemproject'
            DOCKER_IMAGE_TAG = 'v5'
        }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean compile'
            }
        }
         stage('SonarQube Analysis') {
                        steps {
                            sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sarra'
                        }
                    }

                    stage('Test Unit') {
                          steps {
                                sh 'mvn test'
                                }
                                   }
               stage('NEXUS') {
                      steps {
                          sh 'mvn deploy'
                      }
                     }


                      stage('BUILD DOCKER IMAGE') {
                                   steps {
                                       sh 'docker build -t sarraharguem:v5 -f Dockerfile ./'
                                   }
                               }
                             stage('Login & Push Image To HUB') {
                                         steps {
                                                   sh "docker login -u sarraharguem -p Sarra123*"
                                                     sh "docker tag kaddemproject:v5 sarraharguem/kaddemproject"
                                                    sh "docker push  sarraharguem/kaddemproject"
                                         }
                   }
   stage('docker-compose') {
     steps {
        sh 'docker compose up -d'
           echo 'docker-compose'
            }
        }


        }


    post {
        success {
            echo 'Build successful'
        }
        failure {
            echo 'fail'
        }
    }
}