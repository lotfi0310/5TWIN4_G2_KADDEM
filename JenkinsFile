pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean compile'
            }
        }
         stage('SonarQube Analysis') {
                        steps {
                            sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sarra'
                        }
                    }
                    stage('Test Unit') {
                                                    steps {
                                                        sh 'mvn test'
                                                    }
                                                }
                       stage('NEXUS') {
                                                    steps {
                                                        sh 'mvn deploy'
                                                    }
                                                }



    stage('building image') {
        steps {
           sh 'docker build -t $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG -f Dockerfile ./'

              }
           }
                 stage('Test deploy') {
                                    steps {
                                        sh 'mvn deploy'
                                    }
                                }
        }


    post {
        success {
            echo 'Build successful'
        }
        failure {
            echo 'fail'
        }
    }
}